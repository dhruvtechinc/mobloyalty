<div class='row portfolio-boxes' id='portfolio-container'>
  <div class='col-sm-3 portfolio-box portfolio-item'>
    <a href='#'>
      <div class='image-link'>
        <i class='fa-icon-search'></i>
                        <% if store.name.start_with?('Paddy') %>
                <%= image_tag("Paddy-keg.gif", :size => "273x186", :alt => "IXL Martial Arts Leawood KS", :class => "img-responsive img-rounded center-block") %>
                <% elsif store.name.start_with?('Lotus') %>
                <%= image_tag("LotusYoga.jpg", :size => "273x186", :alt => "IXL Martial Arts Leawood KS", :class => "img-responsive img-rounded center-block") %>
                <% elsif store.name.start_with?('IXL') %>
                <%= image_tag("ixl_logo.jpg", :size => "273x186", :alt => "IXL Martial Arts Leawood KS", :class => "img-responsive img-rounded center-block") %>
                <% else %>
                <img class="img-responsive img-rounded center-block" alt="Title" width="273" height="186" src="/assets/lulus.png" />
                <% end %>

      </div>
      <h3 class='title'><%= store.name %></h3>
      <p class='category'><%= link_to "Add", membership_add_path(:store => store.id), method: "create" %></p>
    </a>
  </div>
</div>

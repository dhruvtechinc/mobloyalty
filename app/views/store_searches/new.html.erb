<div class="container">
	<div class="row">
		<div class="col-lg-5">

			<%= form_for @storesearch, html: {class: "text-left"} do |f| %>
			
			<fieldset>

				<% if @storesearch.errors.any? %>
				<div id="error_explanation">
					<div class="alert alert-danger">
						The form contains <%= pluralize(@storesearch.errors.count, "error") %>.
						
						<ul>
							<% @storesearch.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
							<% end %>
						</ul>
					</div>
				</div>
				<% end %>

				<div class="form-group">
					<%= f.label :zip,"Zip Code" %>
					<%= f.text_field :zip, class: "form-control", placeholder: "Enter zip" %>
				</div>
                                <div class="form-group">
                                        <div><h1>OR</h1>
                                        </div>
                                </div>
				<div class="form-group">
					<%= f.label :name,"Business Name" %>
					<%= f.text_field :name, class: "form-control", placeholder: "Enter Business Name" %>
				</div>                    
				<div class="btn-group">
					<%= f.submit "Search", class: "btn btn-lg btn-success", name: "search" %>
				</div>
				<div class="btn-group">
					<%= f.submit "Clear", class: "btn btn-lg btn-success", type: "reset", name: "clear" %>
				</div>                      
			</fieldset>
			<% end %>         

			
		</div>


<% if @stores.any? %>
<div class="container">
        <div class="row"> 
                <div class="col-lg-6">
      <h3>Stores (<%= @stores.count %>)</h3>
      <ol class="stores">
        <%= render @stores %>
      </ol>
                </div>
        </div>
        
</div>
<% end %>                       
                
		
	</div>
</div>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>

<% provide(:title, 'Reset My Password') %>
<div id="main-content-header">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 icon-box">
 <!-- icon -->
      <div class="icon icon-wrap icon-circle icon-lg contrast-bg">
        <i class="fa-icon-key text-white"></i>
      </div>
 
      <div class="content">
        <h1 class="title">Reset My Password</h1>
      </div>
 
      </div>
    </div>
  </div>
</div>
<div id="main-content">
  <div class="container bs-docs-container">
   <div class="container">
    <div class="row">

      <div class="col-sm-6 col-sm-offset-3">
          <div class="stand-out-form">
  <%= form_tag password_resets_path, :method => :post do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], class: "form-control" %>
  </div>
  <div class="btn-group"><%= submit_tag "Reset", class: "btn btn-lg btn-info", :onclick => "alert('Email sent with password reset instructions.')"%></div>
<% end %>
</div>
</div>
  </div>
  </div>
  </div>
</div>